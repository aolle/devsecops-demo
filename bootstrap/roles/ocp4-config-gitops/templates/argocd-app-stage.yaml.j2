apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: stage-quarkus-petclinic
  namespace: openshift-gitops
spec:
  destination:
    namespace: devsecops-qa
    server: https://kubernetes.default.svc
  project: quarkus-petclinic
  source:
    path: environments/stage
    repoURL: http://{{ r_gogs_route.resources[0].spec.host }}/gogs/quarkus-petclinic-config
    targetRevision: HEAD
  syncPolicy:
    automated:
      prune: false
      selfHeal: false
